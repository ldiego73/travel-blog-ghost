            <span class="icon fa-lg">
              <i class="far fa-dot-circle"></i>
            </span>
          </div>
        </div>
      </div>
    </nav>
    <div class="navbar-theme menu-theme" data-tippy-content="{{ t "change theme" }}">
      <span class="icon fa-lg">
        <i class="far fa-dot-circle"></i>
      </span>
    </div>
  </div>
  {{> submenu }}
